<h1 class = 'center'>Create New Post</h1>

<div class = "row">
	<div class="col-md-6 col col-md-offset-3">
		<%= form_for(@post) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :price %>
			<%= f.number_field :price, :class => 'text_field', :step => 0.01 %>

			<%= f.label :body %>
			<%= f.text_area :body %>

			<%= f.label :amazon_link, "Amazon Link" %>
			<%= f.text_field :amazon_link %>

			<%= f.submit "Create new post", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
